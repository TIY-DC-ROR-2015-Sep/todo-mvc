  </head>
  <body>
    <h1><%= list.name %></h1>
    <form method="post" action="/lists/<%= list.id %>/todos">
      <input placeholder="New Item" name="item_name">
      <button>Save</button>
    </form>
    <ul>
      <% list.items.each do |item| %>
        <li><%= item.name %></li>
      <% end %>
    </ul>
  </body>
</html>
